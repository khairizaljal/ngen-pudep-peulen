<?xml version='1.0' encoding='utf-8'?>

<widget xmlns="http://www.w3.org/ns/widgets" 
		xmlns:gap="http://phonegap.com/ns/1.0" 
		id="com.khairizal.saklar"
		versionCode = "3"
		version="1.0.0">
  <name>Saklar @khairizal</name>
  <description>Aplikasi Saklar By Khairizal</description>
  <author href="https://fb.com/khairizalr" email="khairizal@outlook.com">Khairizal</author>
  <content src="index.html"/>
  
  <icon src="www/res/icon/android/drawable-ldpi-icon.png" gap:platform="android" gap:qualifier="ldpi" />
  <icon src="www/res/icon/android/drawable-mdpi-icon.png" gap:platform="android" gap:qualifier="mdpi" />
  <icon src="www/res/icon/android/drawable-hdpi-icon.png" gap:platform="android" gap:qualifier="hdpi" />
  <icon src="www/res/icon/android/drawable-xhdpi-icon.png" gap:platform="android" gap:qualifier="xhdpi" />
  <icon src="www/res/icon/android/drawable-xxhdpi-icon.png" gap:platform="android" gap:qualifier="xxhdpi" />
  <icon src="www/res/icon/android/drawable-xxxhdpi-icon.png" gap:platform="android" gap:qualifier="xxxhdpi" />
  
  <engine name="android" spec="~4.1.1" />
  
  <preference name="permissions" value="none"/>
  
  <!--
      Define access to external domains.
      <access />            - a blank access tag denies access to all external resources.
      <access origin="*" /> - a wildcard access tag allows access to all external resource.
      Otherwise, you can specify specific domains:
      <access origin="http://phonegap.com" />                    - allow any secure requests to http://phonegap.com/
      <access origin="http://phonegap.com" subdomains="true" />  - same as above, but including subdomains, such as http://build.phonegap.com/
      <access origin="http://phonegap.com" browserOnly="true" /> - only allows http://phonegap.com to be opened by the child browser.
  -->
  <access origin="*"/>

  <!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
  <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
  <gap:plugin name="cordova-plugin-whitelist" source="npm" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
      <allow-intent href="market:*" />
  </platform>
  
</widget>